<% form_for @user do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.label :roles, "I want to be to ..." %>
    <br />
    <% for role in User::ROLES %>
      <% unless role == 'admin' %>
        <%= check_box_tag "user[roles][]", role, @user.roles.include?(role) %>
        <%=h role.humanize %> cottages<br />
      <% end %>
    <% end %>
    <%= hidden_field_tag "user[roles][]", "" %>
  </p>
  <p><%= f.submit "Submit" %></p>
<% end %>
